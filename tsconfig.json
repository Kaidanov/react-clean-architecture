{
    "compilerOptions: {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "declarations": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "forceConsistentCasing": true
    },
    "include": [
        "*.ts"
    ]
}